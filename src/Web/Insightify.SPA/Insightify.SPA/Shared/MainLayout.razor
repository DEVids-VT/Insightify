@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@inject IJSRuntime JsRuntime

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <div><h3 class="h3-title">@navigationManager.Uri.Remove(0, navigationManager.BaseUri.Count()).ToUpper()</h3></div>
            <div class="top-row-left">
                 <a class="top-row-item"><i class="fa-regular fa-bell"></i></a>
                <LoginDisplay/>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

